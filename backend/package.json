{
  "name": "eidolon-backend",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --exit 'src/tests/**/*.test.ts'",
    "test:unit": "mocha --require tsx/cjs --extensions ts --exit 'src/tests/unit/**/*.test.ts'",
    "test:integration": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --exit 'src/tests/integration/**/*.test.ts'",
    "test:watch": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --watch --watch-files src 'src/tests/**/*.test.ts'",
    "pretest:integration": "docker compose up -d postgres-test",
    "db:push": "npx drizzle-kit push",
    "db:push:test": "npx drizzle-kit push --config=drizzle.config.test.ts"
  },
  "keywords": [],
  "author": "Pawel Lach",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "chai": "^6.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.7",
    "mocha": "^11.7.5",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
