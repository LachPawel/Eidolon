{
  "name": "eidolon-backend",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --exit 'src/tests/**/*.test.ts'",
    "test:unit": "mocha --require tsx/cjs --extensions ts --exit 'src/tests/unit/**/*.test.ts'",
    "test:integration": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --exit 'src/tests/integration/**/*.test.ts'",
    "test:watch": "NODE_ENV=test mocha --require ./src/tests/loadEnv.cjs --require tsx/cjs --extensions ts --watch --watch-files src 'src/tests/**/*.test.ts'",
    "test:db:clean": "docker compose down postgres-test -v",
    "test:db:reset": "pnpm test:db:clean && docker compose up -d postgres-test && pnpm db:push:test",
    "pretest:integration": "docker compose up -d postgres-test && pnpm db:push:test",
    "db:setup": "docker compose up -d postgres && pnpm db:push",
    "db:clean": "docker compose down postgres -v",
    "db:push": "npx drizzle-kit push",
    "db:push:test": "npx drizzle-kit push --config=drizzle.config.test.ts",
    "db:seed": "tsx src/seeds/seed.ts",
    "db:seed:test": "NODE_ENV=test tsx --env-file=.env.test src/seeds/seed.ts 100",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Pawel Lach",
  "license": "ISC",
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.3",
    "@trpc/server": "^11.7.2",
    "@types/cors": "^2.8.19",
    "algoliasearch": "^5.45.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "chai": "^6.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
