{
  "name": "eidolon-backend",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/workers/streamWorker.ts",
    "build": "tsc && pnpm sentry:sourcemaps || true",
    "start": "node --import ./dist/instrument.js dist/index.js",
    "start:prod": "npm run db:migrate && node --import ./dist/instrument.js dist/index.js",
    "start:worker": "node --import ./dist/instrument.js dist/workers/streamWorker.js",
    "test": "vitest run --no-file-parallelism",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run --no-file-parallelism src/tests/integration",
    "test:watch": "vitest",
    "test:db:clean": "docker compose down postgres-test -v",
    "test:db:reset": "pnpm test:db:clean && docker compose up -d postgres-test && pnpm db:push:test",
    "pretest:integration": "docker compose up -d postgres-test && pnpm db:push:test",
    "db:setup": "docker compose up -d postgres redis && pnpm db:migrate",
    "db:clean": "docker compose down postgres -v",
    "db:push": "npx drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push:test": "npx drizzle-kit push --config=drizzle.config.test.ts",
    "db:seed": "tsx src/seeds/seed.ts",
    "db:seed:test": "NODE_ENV=test tsx --env-file=.env.test src/seeds/seed.ts 100",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org arpl-tm --project node-express ./dist && sentry-cli sourcemaps upload --org arpl-tm --project node-express ./dist"
  },
  "keywords": [],
  "author": "Pawel Lach",
  "license": "ISC",
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.3",
    "@sentry/cli": "^2.58.2",
    "@sentry/node": "^10.27.0",
    "@sentry/profiling-node": "^10.27.0",
    "@trpc/server": "^11.7.2",
    "@types/cors": "^2.8.19",
    "algoliasearch": "^5.45.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "tsx": "^4.20.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  }
}